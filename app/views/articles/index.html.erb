<p id="notice"><%= notice %></p>      
    
<div class="grid grid-cols-4 first:row-2 first:col-4">
<div v-for="#{article} in #{articles}", class="w-full bg-red-400" >
<% @articles.each_with_index do |article, index| %>

<img src="/uploads/<%= article.image %>" class="h-64 w-full object-cover">
    <%= article.title %>
    <%= truncate(article.text, length: 30, separator: ' ') %>
    <%= article.user.username %>
    <%= link_to 'Read More', article %>
    <%= link_to 'Edit', edit_article_path(article) %>
    <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'New Article', new_article_path %>
    <% if @vote_exist[index] %>
      <%= link_to image_tag("logo-1", width: "3%"), votes_path(article) %>
    <% else %>
      <%= link_to image_tag("logo-2", width: "3%"), votes_path(article) %>
    <% end %>
  <% end %>
      </div>

</div>
