<div class="font-mono bg-blue-100 h-screen justify-center font-mono flex">
  <div class="space-y-3 py-4 flex flex-col">
    <h1 class="text-white bg-teal-400 bg-opacity-70 rounded flex items-center text-2xl font-bold justify-center space-y-6 py-6">Editing Category</h1>
    <h2 class="text-white bg-teal-400 bg-opacity-70 rounded flex items-center text-2xl font-bold justify-center space-y-6 py-6"><%= @category.name %></h2>
    <div class="flex justify-center items-center space-x-5">
      <%= render 'form', category: @category %>
      <p><%= link_to 'Show', @category, class:" hover:underline text-white rounded-full hover:text-blue-900 bg-blue-400 py-2 px-4" %></p>
      <p><%= link_to 'Back', categories_path, class:" hover:underline text-white rounded-full hover:text-blue-900 bg-blue-400 py-2 px-4" %></p>
    </div>
  </div>
</div>
