<header>

<!-- navbar goes here -->
<nav class="bg-gray-100">
  <div class="px-8 pt-6 pb-7 mx-auto">
    <div class="flex justify-between">
      <!-- logo -->
        <div class="flex items-center">
          <%= link_to "GetCultured", root_path, class:"hover:text-teal-700 items-center lg:text-2xl tracking-tighter font-mono text-teal-500 font-bold transition duration-300" %>
          <%= link_to image_tag("idea"), root_path, class:"w-9 flex items-center -mt-3" %>
        </div>

        <!-- primary nav -->

      <div class="hidden md:flex flex items-center xl:pr-20  uppercase md:text-xs lg:text-sm space-x-4 font-mono">
        <%= link_to "Home", articles_path, class: "font-bold font-mono md:text-xs lg:text-sm text-teal-600 hover:text-teal-500 bg-gray-200 hover:bg-gray-100 py-2 px-3 rounded shadow uppercase transition duration-300" %>
        <% @categories.each do |category| %>
          <div class="hover:text-blue-600">
            <%= link_to category.name, articles_path(@articles), class: "flex space-x-4" %>
          </div>
        <% end %>
      </div>
      

      <!-- secondary nav -->
      <div class="hidden md:flex flex items-center space-x-3 md:text-xs lg:text-sm uppercase font-mono">
        <div class="flex space-x-2 items-center md:text-xs lg:text-sm">
          <% if user_signed_in? %>
          <div class="py-2 px-3 bg-teal-400 hover:bg-teal-300 text-teal-900 hover:text-teal-800 rounded shadow transition duration-300">
            <%= link_to "Edit account", edit_user_registration_path, class: "btn btn-default hover:text-blue-600" %>
          </div>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"btn btn-default hover:text-blue-600" %>
        </div>
          <% else %>
        <div class="flex space-x-2 items-center md:text-xs lg:text-sm">
          <div class="py-2 px-3 bg-teal-400 hover:bg-teal-300 text-teal-900 hover:text-teal-800 rounded shadow transition duration-300 md:text-xs lg:text-sm">
            <%= link_to "Login", new_user_session_path, class:"btn btn-default hover:text-blue-600" %>
          </div>
            <%= link_to "Register", new_user_registration_path, class:"btn btn-default hover:text-blue-600" %>
          <% end %>  
        </div>

      </div>
    </div>

      <!-- mobile menu -->
      <div class="md:hidden flex items-center">
        <button class="mobile-menu-button h-8 w-10 flex items-center transition delay-150 duration-300 ease-in-out animate-pulse focus:outline-none">
          <%= image_tag("menu") %>
        </button>

      </div>

  </div>

 <!-- mobile menu -->
      <div class="mobile-menu hidden md:hidden transition duration-500 ease-in-out ">
        <div class="block uppercase text-xs font-mono">
        <%= link_to "Home", articles_path, class: "font-bold block hover:bg-gray-300 hover:text-teal-700 items-center tracking-tighter font-mono text-teal-500 py-1" %>
        <% @categories.each do |category| %>
          <div class="block hover:bg-gray-300 hover:text-teal-700 items-center tracking-tighter font-mono text-teal-500 py-1">
            <%= link_to category.name, articles_path(@articles), class: "flex space-x-4" %>
          </div>
        <% end %>
      </div>
      </div>

</nav>

<!-- content goes here -->

<div class="py-32 text-center">
  <h2 class="font-extrabold text-4xl">Navbars in Tailwind~</h2>
</div>

