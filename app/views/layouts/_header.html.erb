<header>

<!-- navbar goes here -->
<nav class="bg-gray-100">
  <div class="px-6 pt-6 pb-7 mx-auto">
    <div class="flex justify-between">
      <!-- logo -->
      <div class="flex space-x-4 items-center">
        <div class="flex">
          <%= link_to "liFEsTlye", root_path, class:"items-center text-2xl tracking-wide font-bold" %>
          <%= link_to image_tag("ovals"), root_path, class:"w-9 flex items-center -ml-2 pt-2" %>
        </div>

        <!-- primary nav -->
        <%= link_to "Home", articles_path, class: "text-sm text-orange-600 hover:text-orange-400 uppercase" %>

      <div class="flex items-center text-center uppercase text-sm space-x-2">
        <% @categories.each do |category| %>
          <div class="hover:text-orange-600">
            <%= link_to category.name, articles_path(@articles), class: "flex space-x-4" %>
          </div>
        <% end %>
        </div>
      </div>

      <!-- secondary nav -->
      <div class="flex items-center text-sm space-x-3 uppercase">
        <div class="flex">
          <% if user_signed_in? %>
            <%= link_to "Edit account", edit_user_registration_path, class: "btn btn-default mb-2 lg:mr-2 lg:mb-0 block hover:text-orange-600" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"btn btn-default mb-2 lg:mb-0 block hover:text-orange-600" %>
        </div>
          <% else %>
        <div class="flex">
            <%= link_to "Login", new_user_session_path, class:"btn btn-default mb-2 lg:mr-2 lg:mb-0 block hover:text-orange-600" %>
            <%= link_to "Register", new_user_registration_path, class:"btn btn-default block hover:text-orange-600" %>
          <% end %>  
        </div>
      </div>
    </div>
      <!-- mobile menu -->
  </div>
</nav>

<!-- content goes here -->

<div class="py-32 text-center">
  <h2 class="font-extrabold text-4xl">Navbars in Tailwind~</h2>
</div>

